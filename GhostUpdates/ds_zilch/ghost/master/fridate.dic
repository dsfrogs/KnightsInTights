OnContinueFridatePhase
{
	"\![enter,passivemode]"
	--
	lockMenus = 1
	blockPet = 1	
	--
	case TOINT(fridatePhase)
	{
		when 1 
		{
			//"fridatePhase=1"
			--			
			Fridate
		}
		when 2 
		{
			//"fridatePhase=2"
			--
			"%(Select.Now)"
		}
		when 3 
		{
			//"fridatePhase=3"
			--
			"%(Select.FridateContinue)"
		}
		when 4 
		{
			//"fridatePhase=4"
			--
			FridateAfterMath
		}
		when 5 
		{
			//"%(Select.Nope)"
			//"fridatePhase=5"
			--			
			FridateAfterMath //IS IT GONE IS IT GONE
		} //return to the question- not the answer
		when 6 
		{
			//"fridatePhase=6"
			--					
			"%(Select.Gone)"
		} 
		when 7 
		{
			//"fridatePhase=7"
			--					
			"%(Select.Calm)"
		}
		when 8 
		{
			//"fridatePhase=8"
			--				
			TellWhatSawNotCalm
		}
		when 9 
		{
			//"fridatePhase=9"
			--	
			TellWhatSawCalm
		}
	}
}

