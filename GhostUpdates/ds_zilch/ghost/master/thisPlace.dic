ThisPlaceMaxLinesInPool
{
	"11"
}

ThisPlacePool
{
	if chooseThisPlace >=TOINT(ThisPlaceMaxLinesInPool) //match to total number of lines in pool
	{
		chooseThisPlace = TOINT(0)
	}
	--
	chooseThisPlace++
	--		
	case chooseThisPlace
	{
		when 1
		{
			"\0\s[0]\i[111]%(z)There's a lot of dust here. \s[0]\i[105]\i[102]When did you last clean this place, %(username)?%(d)\%(wx)\s[0]\e"
			
		}
		when 2
		{
			artExp++
			--
			"\0\s[0]\i[118]%(z)Is it okay if I look at the pictures in your folder?%(d)\%(wx)\s[0]\n\n[half]\![*]\q[Yes,nothing]\n\![*]\q[Get out of my folder Zilch!!!,nothing]\n"			
		}
		when 3
		{
			scienceExp++
			--		
			"\0\s[0]\i[103]%(z)You know what I found out?\%(wx) \s[0]\i[115]\i[114]I mostly end up here at %(OnFindMostVisitedHour)!\s[0] More research is required!%(d)\%(wx)"			
		}
		when 4
		{
			"\0\s[0]\i[109]%(z)Ew there's a worm here.%(d)\%(wx)\s[0]\e"		
		}
		when 5
		{
			scienceExp++
			dreamsExp++
			--
			"\0\s[0]\i[102]%(z)This place is like a limbo between the real world and the dream world.\%(wx) \s[0]\i[111]I need to research it!%(d)\%(wx)\s[0]"			
		}
		when 6
		{
			"\0\s[0]%(z)\i[102]Is there anything to eat in this place?%(d)\%(wx)\s[0]\n\n%(FoodHere)"			
		}
		when 7
		{
			artExp++
			--
			"\0\s[0]%(z)\i[103]How are things on your side of the screen?\%(wx) What's your wallpaper like?%(d)\%(wx)\s[0]"			
		}
		when 8
		{
			"\0\s[0]\i[108]\i[109]%(z)*sneeze* \%(wx)\s[0]...I had a really bad cold.\%(wx)%(d)\n\n* (Your computer is now infected with Zilch's virus.)\%(wx)\s[0]"
		}
		when 9
		{
			"\0\s[0]\i[111]%(z)can you open a window to anywhere you like?%(d)\%(wx) \n\n\![*]\q[Pretty much,YesWindow].\%(wx)"  			
		}
		when 10
		{
			if wanthome == 2 && passhour >=1
			{
				"* (Zilch sulks).\%(wx)\n\n\0\s[0]\i[117]\i[2]%(z)I'm tired!\%(wx) Can I leave?\%(wx)%(d)\n\n\![*]\q[Sure,Leave]\n\![*]\q[Nope,NotLeave]\n"
			}
			else			
			{
				ThisPlacePool
			}
		}	
		when 11
		{
			"%(z)\0\s[0]I wonder what's on the other side of the screen...%(d)\%(wx)\![move,0,0,3000]\%(wx)\0\s[-1]\![move,1200,0,0]\c\0\s[0]\i[111]\i[110]%(z)It wraps around!\%(wx)%(d)\s[0]"
		}
	}
}


